stages:
  - test
  - quality
  - docs
  - release

variables:
  PIP_CACHE_DIR: "$CI_PROJECT_DIR/.cache/pip"

cache:
  paths:
    - .cache/pip
    - .nox

.python_template: &python_template
  image: python:3.11
  before_script:
    {% if package_manager == "PDM" -%}
    - pip install pdm
    {% else -%}
    - pip install uv
    {% endif -%}

test:
  <<: *python_template
  stage: test
  script:
    {% if package_manager == "PDM" -%}
    - pdm install
    - pdm run tests
    {% else -%}
    - uv sync
    - uv run tests
    {% endif -%}
  coverage: '/TOTAL.*\s+(\d+%)$/'
  artifacts:
    reports:
      coverage_report:
        coverage_format: cobertura
        path: coverage.xml

quality:
  <<: *python_template
  stage: quality
  script:
    {% if package_manager == "PDM" -%}
    - pdm install
    - pdm run checks
    {% else -%}
    - uv sync
    - uv run checks
    {% endif -%}

docs:
  <<: *python_template
  stage: docs
  script:
    {% if package_manager == "PDM" -%}
    - pdm install
    - pdm run docs build
    {% else -%}
    - uv sync
    - uv run docs build
    {% endif -%}
  artifacts:
    paths:
      - site/
  only:
    - main

pages:
  stage: docs
  dependencies:
    - docs
  script:
    - mv site public
  artifacts:
    paths:
      - public
  only:
    - main

{% if publish_pypi -%}
release:
  <<: *python_template
  stage: release
  script:
    {% if package_manager == "PDM" -%}
    - pdm install
    - pdm run release
    {% else -%}
    - uv sync
    - uv run release
    {% endif -%}
  only:
    - tags
  when: manual
{% endif -%}
